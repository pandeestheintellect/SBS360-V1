@model Eng360Web.Models.ViewModel.PaymentInfoViewModel

@{
    Layout = null;
}

<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />

<style>
    .table-condensed tbody > tr > td > a {
        color: #4eb1ba !important;
    }

    .required::after {
        content: "*";
        font-weight: bold;
        color: red;
    }

    
</style>


<p>
    &nbsp;
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b> Payment Info </b>

                @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>*@
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "invoiceForm" }))
                {
                    <div class="row">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.InvoiceNum, " Invoice Number", htmlAttributes: new { @class = "control-label" })
                            <div class="">
                                @Html.EditorFor(model => model.InvoiceNum, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
 
                            </div>
                        </div>
   

                        <div class="col-md-6">
                            @Html.LabelFor(model => model.InvAmount, "Total Invoice Amount", htmlAttributes: new { @class = "control-label" })
                            <div class="">
                                @Html.EditorFor(model => model.InvAmount, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                
                            </div>
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(model => model.PymtStatus, "Payment Status", htmlAttributes: new { @class = "control-label" })
                            <div class="">
                                @Html.EditorFor(model => model.PymtStatus, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                
                            </div>
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(model => model.ReceivedAmount, "Payment Receied", htmlAttributes: new { @class = "control-label" })
                            <div class="">
                                @Html.EditorFor(model => model.ReceivedAmount, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                            </div>
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(model => model.PendingAmount, "Payment Pending", htmlAttributes: new { @class = "control-label" })
                            <div class="">
                                @Html.EditorFor(model => model.PendingAmount, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                            </div>
                        </div>

                        @*<div class="col-md-6">
                            @Html.LabelFor(model => model.ExcessReceived, "Excess Received(If any)", htmlAttributes: new { @class = "control-label" })
                            <div class="">
                                @Html.EditorFor(model => model.ExcessReceived, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                            </div>
                        </div>*@


                    </div>
                    <br />

                   

                    <div class="row">
                        <div class="col-md-6" style="font-weight: bolder;">
                            Payment Details
                        </div>
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered" id="tablePayment">

                                <thead>
                                    <tr>
                                        <th>SL No</th>
                                        <th>Voucher No</th>
                                        <th>Invoice No</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var i = 0;
                                    }
                                    @foreach (var obj in Model.eng_pymt_receivable)
                                    {

                                        i = i + 1;
                                        <tr>
                                            <td>
                                                @i
                                            </td>
                                            <td>
                                                @obj.VoucherNo
                                            </td>
                                            <td>
                                                @obj.InvoiceNo
                                            </td>
                                            <td>
                                                @{
                                                    var dt = "";
                                                    dt = Convert.ToDateTime(obj.Tr_date).ToString(Eng360Web.Models.Utility.AppSettings.GetDateFormat());
                                                }
                                                @dt
                                               
                                            </td>

                                            <td>@obj.Amount</td>

                                        </tr>
                                    }

                                </tbody>

                            </table>
                        </div>

                    </div>

                                        }

            </div>

            <div class="modal-footer">

                <span style="float:right">&nbsp;</span><button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            </div>
        </div>
    </div>
</div>

<script>

  

</script>