@model Eng360Web.Models.ViewModel.QuoteViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.DoNo</title>

    <style type="text/css">
     
        @@media print
        {
           #footer {
         display: block;
         position: fixed;
         bottom: 0;
        }
        }

        body, td, th {
            font-family: Arial;
            font-size: 13px;
            word-wrap:break-word;
        }
     

    </style>
</head>
<body style="font-family: Arial;">
    <center>

        <table border="0" width="800">
            <thead>
                <tr>
                    <th style="width:100%">
                        <table width="773" border="0" cellspacing="0" cellpadding="0">
                            <tr>

                                <td width="100" align="left" valign="top" style="padding:0px;"><img style="width: 130px; height: 130px;" src="~/images/CompanyLogo/logo.png" /></td>
                                <td width="388" align="left" valign="top" style="padding:2px;">
                                    <span style="font-size:16px; font-weight:bold;">
                                        @Eng360Web.Models.Utility.AppSession.GetCompanyDetail().CompanyName
                                    </span><br />
                                    <span style="font-weight:bold; font-size:12px;">
                                        @Eng360Web.Models.Utility.AppSession.GetCompanyDetail().Address1<br />
                                        @Eng360Web.Models.Utility.AppSession.GetCompanyDetail().Address2 @Eng360Web.Models.Utility.AppSession.GetCompanyDetail().City @Eng360Web.Models.Utility.AppSession.GetCompanyDetail().Pincode	<br />
                                        Tel : (65) @Eng360Web.Models.Utility.AppSession.GetCompanyDetail().Tel / Fax: (65) @Eng360Web.Models.Utility.AppSession.GetCompanyDetail().Fax	<br />
                                        E-mail : @Eng360Web.Models.Utility.AppSession.GetCompanyDetail().Email	<br />
                                        Co. Reg. No : @Eng360Web.Models.Utility.AppSession.GetCompanyDetail().RegNo GST. Reg. No : @Eng360Web.Models.Utility.AppSession.GetCompanyDetail().GstRegNo
                                    </span>
                                </td>
                                <td width="240" align="right" valign="top" style="padding-right:5px; line-height:15px;">
                                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                        <tr>
                                            <td align="right" valign="top">
                                                <img style="width: 210px; height: 90px;" src="~/images/CompanyLogo/biz3.png" />
                                            </td>
                                        </tr>

                                    </table>

                                </td>
                            </tr>
                        </table>
                    </th>
                </tr>

            </thead>

            <tfoot>
                <tr>
                    <td width="100%">
                        <table width="100%" border="0" height="100">
                            <tr>
                                <td><br />&nbsp;</td>
                            </tr>
                        </table>
            </tfoot>

            <tbody>
                <tr>

                    <td align="center" style="font-size: 22px;font-weight:bold;">

                        WORK COMPLETION
                    </td>
                </tr>
                <tr>
                    <td><hr /></td>
                </tr>

                <tr>
                    <td>

                        <table width="95%" border="0" cellspacing="0" cellpadding="0" style="margin-top:5px;">
                            <tr>
                                <td width="412" align="left" valign="top" style="padding:3px;">
                                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                        <tr>
                                            <td width="5%" align="left" valign="top">To:</td>
                                            <td width="95%">
                                                <div style="margin-left:10px;">
                                                    <strong> @Model.eng_client_master.Company_Name <br /></strong>
                                                    <div>
                                                        @Model.eng_client_master.eng_address_master.Address1<br />
                                                        @Model.eng_client_master.eng_address_master.Address2<br />
                                                        @Model.eng_client_master.eng_address_master.City- @Model.eng_client_master.eng_address_master.Postal_Code<br />
                                                        Tel: @Model.eng_client_master.eng_address_master.Tel<br />
                                                        <br />


                                                        Attn : <strong>
                                                            @Model.eng_client_master.eng_client_contact.Where(a => a.CCID == Model.Attention_CCID).First().SPOCName
                                                            
                                                        </strong><br />

                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>

                                </td>
                                <td width="289" align="center" valign="top" style="padding:3px;">
                                    <table width="299" border="0" cellspacing="0" cellpadding="0">
                                        <tr>
                                            <td width="166" height="11" align="right" valign="middle" style="padding:1px; font-size:13px;">WC NO &nbsp; : </td>
                                            <td width="133" align="left" valign="middle" style="padding:1px; font-size:13px;font-weight:bold;">&nbsp; @Model.DoNo</td>
                                        </tr>
                                        <tr>
                                            <td width="166" height="11" align="right" valign="middle" style="padding:1px; font-size:13px;">Date &nbsp; : </td>
                                            <td width="133" align="left" valign="middle" style="padding:1px; font-size:13px;font-weight:bold;">
                                                &nbsp;
                                                @{
                                                    var dt = "";
                                                    dt = Convert.ToDateTime(Model.DODate).ToString("dd-MM-yyyy");
                                                }
                                                @dt



                                            </td>
                                        </tr>

                                        <tr>
                                            <td height="11" align="right" valign="middle" style="padding:1px; font-size:13px;">Our Ref &nbsp; : </td>
                                            <td width="133" align="left" valign="middle" style="padding:1px; font-size:13px;">&nbsp; @Model.QuoteRefNum.Replace("_R0", "")</td>
                                        </tr>

                                    </table>
                                </td>
                            </tr>
                        </table>


                    </td>
                </tr>

                <tr>
                    <td>&nbsp;<br /></td>
                </tr>

                <tr>
                    <td width="100%">
                        <table id="Result" class="table table-bordered table-sm" style="border-collapse: collapse !important" width="98%">

                            <thead>

                                <tr>
                                    <th width="5%" style="border:1px solid #000000 !important">S.NO</th>
                                    <th width="50%" style="border:1px solid #000000 !important">JOB DESCRIPTION</th>
                                    <th width="10%" style="border:1px solid #000000 !important">UNIT</th>
                                    <th width="10%" style="border:1px solid #000000 !important">QTY</th>
                                    @*<th width="12%" style="border:1px solid #000000 !important">PRICE S$</th>
                                        <th width="16%" style="border:1px solid #000000 !important">AMOUNT S$</th>*@
                                </tr>
                            </thead>
                            @{
                                var st = "";
                                var i = 1;
                                decimal subTotal = 0;

                                decimal gst = 0;
                                decimal disc = (decimal)Model.Discount;

                                foreach (var desc in Model.eng_quote_description)
                                {
                                    var tempTotal = desc.Quantity * desc.QuotePrice;
                                    IHtmlString tx = null;

                                    tx = Html.Raw(Html.Encode(desc.QuoteDescription).Replace(Environment.NewLine, "<br />"));
                                    tx = Html.Raw(Html.Encode(tx).Replace("\n", "<br />"));
                                    tx = Html.Raw(Html.Encode(tx).Replace("\r", "<br />"));
                                    if (desc.QDID == Model.eng_quote_description.Last().QDID)
                                    {

                                        @*<tr style="border-bottom: 1px solid #000000 !important;">*@
                                        <tr style="border:1px solid #000000 !important; border: 1px solid #000;">
                                            <td width="5%" align="center" valign="top" style="font-size:13px;padding:3px; border:1px solid #000000 !important">@i</td>
                                            <td width="50%" align="left" valign="top" style="font-size:13px; padding-left: 3px;word-wrap:break-word; text-overflow: ellipsis;border:1px solid #000000 !important ">
                                                <div style="font-size:13px;word-break: keep-all">
                                                    @*@Html.Raw(Html.Encode(desc.QuoteDescription).Replace(Environment.NewLine, "<br />"))*@
                                                    @tx
                                                </div>
                                            </td>
                                            <td width="10%" align="center" valign="top" style="font-size:13px;padding:3px;border:1px solid #000000 !important">@desc.UnitOfMeasure</td>
                                            <td width="10%" align="center" valign="top" style="font-size:13px;padding:3px;border:1px solid #000000 !important ">

                                                @desc.Quantity
                                            </td>
                                            @*<td width="12%" align="right" valign="top" style="font-size:13px;padding:3px;border:1px solid #000000 !important ">
                                                    @{
                                                        st = string.Format("{0:0,0.00}", desc.QuotePrice);
                                                    }
                                                    @st
                                                </td>
                                                <td width="16%" align="right" valign="top" style="font-size:13px;padding:3px;border:1px solid #000000 !important ">
                                                    @{
                                                        st = string.Format("{0:0,0.00}", tempTotal);
                                                    }
                                                    @st
                                                </td>*@
                                        </tr>

                                    }
                                    else
                                    {

                                        @*<tr style="border-bottom: 1px solid #000000 !important;">*@
                                        <tr style="border:1px solid #000000 !important; border: 1px solid #000;">
                                            <td width="5%" align="center" valign="top" style="font-size:13px;padding:3px;border:1px solid #000000 !important ">@i</td>
                                            <td width="50%" align="left" valign="top" style="font-size:13px;padding-left:3px; padding-right:3px; border:1px solid #000000 !important">
                                                <div style="font-size:13px;word-wrap: break-word;">
                                                    @*@Html.Raw(Html.Encode(desc.QuoteDescription).Replace(Environment.NewLine, "<br />"))*@
                                                    @tx
                                                </div>
                                            </td>
                                            <td width="10%" align="center" valign="top" style="font-size:13px;padding:3px; border:1px solid #000000 !important">@desc.UnitOfMeasure </td>
                                            <td width="10%" align="center" valign="top" style="font-size:13px;padding:3px;border:1px solid #000000 !important ">@desc.Quantity</td>
                                            @*<td width="12%" align="right" valign="top" style="font-size:13px;padding:3px; text-align:right;border:1px solid #000000 !important ">
                                                    @{
                                                        st = string.Format("{0:0,0.00}", desc.QuotePrice);
                                                    }
                                                    @st
                                                </td>
                                                <td width="16%" align="right" valign="top" style="font-size:13px;padding:3px; text-align:right;border:1px solid #000000 !important ">
                                                    @{
                                                        st = string.Format("{0:0,0.00}", tempTotal);
                                                    }
                                                    @st
                                                </td>*@
                                        </tr>

                                    }


                                    subTotal = subTotal + (desc.Quantity * Convert.ToDecimal(desc.QuotePrice));

                                    i = i + 1;
                                }


                            }

                        </table>


                    </td>
                </tr>

                <tr>
                    <td style="padding-left: 10px;">&nbsp;<br />
                        @*<strong>Pls Ref the Invoice No : @Model.InvoiceNo</strong>*@
                        <br /><br />
                    </td>
                </tr>

                <tr>
                    <td>
                        <table width="97%" border="0" cellspacing="0" cellpadding="0" style="margin-top:0px; border-collapse: collapse; padding: 10px; ">
                            <tr>
                                <td width="430" align="left" valign="top" style="font-size:13px; border-style:solid; border-bottom-width:0px; border-top-width:0px; border-left-width:0px; border-right-width:0px; padding:0px;">
                                    <table width="510" border="0" cellspacing="0" cellpadding="0">
                                        <tr>
                                            <td style="padding:10px;">
                                                
                                                For Citi Construction & Engineering Pte. Ltd.
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;"> &nbsp;<!-- ____________________________________--><br /></td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 10px;">Authorised Signature </td>
                                        </tr>
                                    </table>
                                </td>
                                <td width="260" align="right" valign="top" style="font-size: 13px;border-style:solid; border-bottom-width:0px; border-top-width:0px; border-left-width:0px; border-right-width:0px; padding:0px;">
                                   
                                    <table width="330" border="0" cellspacing="0" cellpadding="0">
                                        <tr>
                                            <td style="padding:10px;" align="center">
                                             
                                                Confirmed and Accepted by Client
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;"> &nbsp;<!-- ____________________________________--><br /></td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;" align="center">Authorised Signature and Co's Stamp </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>

            </tbody>
        </table>

        <table id="footer" width="800">
            <tr>
                <td width="100%">
                    @*<img style="width: 830px; height: 80px;" src="~/images/CompanyLogo/Footer.jpg" />*@
                </td>
            </tr>
        </table>


    </center>

</body>
</html>
