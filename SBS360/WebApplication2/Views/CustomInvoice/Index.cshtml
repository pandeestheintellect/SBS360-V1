@model IEnumerable<Eng360Web.Models.ViewModel.CustomInvoiceViewModel>

@{
    Layout = null;
}


<div class="row inner-page--container">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b> Custom Invoice Details </b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered" id="customInvoice">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ProjectNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.QuoteNo)
                            </th>
                           
                            <th>
                                @Html.DisplayNameFor(model => model.InvoiceNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InvoiceDate)
                            </th>
                            
                            <th>Action</th>
                        </tr>
                        </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProjectNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QuoteNo)
                                </td>
                                 
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceNo)
                                </td>
                                <td>
                                    
                                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                                </td>
                             
                                <td>
                                    <a class="btn" href="CustomInvoice/DetailsInv/@item.InvoiceID" target="_blank" title="View Invoice"  @*onclick="ViewQuote(@item.QuoteID)"*@> <i class="fa fa-file-text-o" aria-hidden="true" style="color:#4eb1ba;font-size:24px"></i> </a>
                                    
                                    <a class="btn" href="CustomInvoice/DetailsDO/@item.InvoiceID" target="_blank" title="View DO"  @*onclick="ViewQuote(@item.QuoteID)"*@> <i class="fa fa-truck" aria-hidden="true" style="color:#4eb1ba;font-size:24px"></i> </a>

                                    <a class="btn" title="Delete Custom Invoice"  onclick="DeleteCustomInvoice('@item.InvoiceID','@ViewBag.ProjectID')"> <i class="fa fa-trash" aria-hidden="true" style="color:orangered;font-size:24px"></i> </a>

                                </td>
                            </tr>
                        }
                    </tbody>
</table>
            </div>

            
        </div>
        <div class="modal-footer">

            <span style="float:right">&nbsp;</span><input type="button" value="Back" id="create-CI-dialog-back" style="float:right" class="btn btn-primary Project" />
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        debugger;
        $('#customInvoice').DataTable({
            "autoWidth": true,
            //"scrollX": true,
            dom: 'Bfrtipl',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5',

            ]
        });
    });
    $('#customInvoice_wrapper .dt-buttons').prepend('<a  onclick="CreatecustomInvoice(@ViewBag.ProjectID)" class="dt-button buttons-copy buttons-html5" tabindex="0" aria-controls="emplyeeTable" href="#"><span>Create</span></a>')
    $('#customInvoice_wrapper .dt-button').addClass('btn btn-primary').removeClass('dt-button').css('margin-right', '5px')
</script>

