@model IEnumerable<Eng360Web.Models.ViewModel.PermissionViewModel>

@{
    Layout = null;
}


<div class="row inner-page--container">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>   Menu Access </b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                
                <table class="table table-striped table-bordered" id="menuTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.eng_usergroup.GroupName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.eng_module.ModuleName)
                            </th>                  
                            
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.eng_usergroup.GroupName)
                                </td>
                                                               
                                <td>
                                    @Html.DisplayFor(modelItem => item.eng_module.ModuleName)
                                </td>
                                
                                <td>
                                    <a class="btn" title="Delete User"  onclick="DeleteMenu(@item.PermissionID)"> <i class="fa fa-trash" aria-hidden="true" ></i> </a>

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
                       
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $('#menuTable').DataTable({
            "autoWidth": true,
            //"scrollX": true,
            dom: 'Bfrtipl',
            buttons: [
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'Excel'
                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="fa fa-file-text-o"></i>',
                    titleAttr: 'CSV'
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fa fa-file-pdf-o"></i>',
                    titleAttr: 'PDF'
                }

            ]
        });
    });
    $('.dt-buttons').prepend('<a  onclick="CreateMenu()" class="dt-button buttons-create buttons-html5" tabindex="0" aria-controls="userTable" href="#" title="Add"><i class="fa fa-plus"></i></a>')
    $('.dt-button').addClass('btn btn-primary').removeClass('dt-button')
</script>