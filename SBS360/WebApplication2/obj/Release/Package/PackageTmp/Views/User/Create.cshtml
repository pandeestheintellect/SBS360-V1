@model Eng360Web.Models.ViewModel.UserViewModel

@{
    Layout = null;
}

<style>
    .required::after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>


<div class="row inner-page--container">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b> Add New User  </b>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="modal-body">
                    @using (Html.BeginForm("Create", "User", FormMethod.Post, new { role = "form", id = "userForm" }))
                    {
                        @Html.AntiForgeryToken()



                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">


                            <div class="col-md-12">
                                @Html.LabelFor(model => model.EmpID, htmlAttributes: new { @class = "control-label required" })
                                <div>
                                    @Html.DropDownList("EmpID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.EmpID, "", new { @class = "text-danger" })

                                </div>
                            </div>


                            <div class="col-md-12">
                                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label required" })
                                <div>
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label required" })
                                <div>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-12">
                                @Html.LabelFor(model => model.DisplayName, htmlAttributes: new { @class = "control-label required" })
                                <div>
                                    @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-12">
                                @Html.LabelFor(model => model.GroupID, "GroupID", htmlAttributes: new { @class = "control-label" }) 
                                <div>
                                    @Html.DropDownList("GroupID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })

                                </div>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>

                            <button type="button" id="create-user-dialog-save" class="btn btn-primary">Create</button>

                        </div>


                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>