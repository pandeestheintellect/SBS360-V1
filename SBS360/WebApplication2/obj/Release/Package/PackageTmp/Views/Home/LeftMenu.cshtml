<script>

    $(function () {
        $('#side-menu').metisMenu();
        $('#toggleBtn').on('click', function () {
            if ($('body').hasClass('mini-sidebar')) {
                $('body').removeClass('mini-sidebar');
            } else {
                $('body').addClass('mini-sidebar');
            }
            return false;
        });

        $('.themes-icon').on('click', function () {
            if ($('body').hasClass('theme-opened')) {
                $('body').addClass('theme-closed');
                $('body').removeClass('theme-opened');
            } else {
                $('body').addClass('theme-opened');
                $('body').removeClass('theme-closed');
            }
        });

        $('.theme-default').on('click', function () {
            $('body').removeClass('blue');
            $('body').removeClass('orange');
        });

        $('.theme-blue').on('click', function () {
            $('body').addClass('blue');
            $('body').removeClass('orange');
        });

        $('.theme-orange').on('click', function () {
            $('body').addClass('orange');
            $('body').removeClass('blue');
        });
    });

</script>