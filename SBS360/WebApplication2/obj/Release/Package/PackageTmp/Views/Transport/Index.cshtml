@model IEnumerable<Eng360Web.Models.ViewModel.TransportViewModel>

<link href="~/Scripts/lobipanel-master/dist/css/lobipanel.min.css" rel="stylesheet" />

@{
    Layout = null;
}


<div class="row inner-page--container">
    <div class="col-lg-12">
        <div class="panel panel-default" id="testpanel">
            <div class="panel-heading">
                <b>   Vehicle Details </b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered" id="transportTable">
                    <thead>
                        <tr>
                            <th>
                                Vehicle Name
                            </th>
                            <th>
                                Vehicle Company
                            </th>
                            <th>
                                Vehicle Model
                            </th>

                            <th>
                                Vehicle Type
                            </th>
                            <th>
                                Vehicle Number
                            </th>
                            <th>
                                COE Registration
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle_Name)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle_Company)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle_Model)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle_Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle_Number)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.COE_Regn_Number)
                                </td>

                                <td>
                                    <a class="btn" title="Edit Vehicle" onclick="EditVehicle(@item.TransportID)"> <i class="fa fa-pencil action-pencil" aria-hidden="true"></i>   </a>
                                    <a class="btn" title="View Vehicle Details" onclick="ViewVehicle(@item.TransportID)"> <i class="fa fa-search action-search" aria-hidden="true"></i> </a>
                                    <a class="btn" title="Delete Vehicle" onclick="DeleteVehicle('@item.TransportID','@item.Vehicle_Name')"> <i class="fa fa-trash action-trash" aria-hidden="true"></i> </a>

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/lobipanel-master/dist/js/lobipanel.min.js"></script>
<script>
    $(document).ready(function () {

        $('#transportTable').DataTable({
            "autoWidth": true,
            //"scrollX": true,
            dom: 'Bfrtipl',
            buttons: [
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'Excel'
                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="fa fa-file-text-o"></i>',
                    titleAttr: 'CSV'
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fa fa-file-pdf-o"></i>',
                    titleAttr: 'PDF'
                }

            ]
        });
    });
    $('.dt-buttons').prepend('<a  onclick="CreateVehicle()" class="dt-button buttons-create buttons-html5" tabindex="0" aria-controls="productTable" href="#"><i class="fa fa-plus"></i></a>')
    $('.dt-button').addClass('btn btn-primary').removeClass('dt-button')

    $(function () {
        $('#testpanel, #testpanel1').lobiPanel({
            //Options go here             
            reload: false,
            close: false,
            editTitle: false

        });
    });
</script>