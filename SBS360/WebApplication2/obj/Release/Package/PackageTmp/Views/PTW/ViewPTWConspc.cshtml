                                <td width="25%">
                                    Designation: &nbsp; @Model.Stage6_Person_Desig <br />
                                </td>
                                <td width="25%">
                                    Signature: &nbsp; <br />
                                </td>
                                <td width="25%">
                                    @{ 
                                        var stgdt = "";
                                        if(Model.Stage6_Date_Time != null)
                                        {
                                            stgdt = Convert.ToDateTime(Model.Stage6_Date_Time).ToString("dd/MM/yyyy HH:mm");
                                        }
                                    }
                                    Date and Time: &nbsp; @stgdt <br />
