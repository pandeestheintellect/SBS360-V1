                                    <td>@stage5.O2</td>
                                    <td>@stage5.CO2</td>
                                    <td>@stage5.LEL</td>
                                    <td>@stage5.H2S</td>
                                    <td>@stage5.Safe_for_Entry</td>
                                    <td>@stage5.Stage5_Assessor_Name</td>
                                    <td>@stage5.Assessor_Comments</td>
                                </tr>

                            }
