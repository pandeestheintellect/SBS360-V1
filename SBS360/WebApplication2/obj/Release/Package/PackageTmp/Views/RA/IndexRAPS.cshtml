@model IEnumerable<Eng360Web.Models.ViewModel.RAMastersViewModel>

@{
    Layout = null;
}

    

    <div class="row inner-page--container">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <b> RA Process Description </b>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-striped table-bordered" id="rawaTable">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                               
                                <th>
                                    Process Description
                                </th>
                                
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 0;
                            }
                            @foreach (var item in Model)
                            {
                                i = i + 1;
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemDescription)
                                    </td>
                                   
                                    <td>
                                                                                                                     
                                        <a class="btn" title="Edit RA Process"  onclick="EditRAMaster('RAPS', '@item.ItemID')"> <i class="fa fa-pencil action-pencil" aria-hidden="true" ></i>   </a>
                                        
                                        <a class="btn" title="Delete RA Process"  onclick="DeleteRAPS(@item.ItemID)"> <i class="fa fa-trash action-trash" aria-hidden="true" ></i> </a>
                                        
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

<script>
    $(document).ready(function () {
        
        $('#rawaTable').DataTable({
            "autoWidth": true,
            //"scrollX": true,
            dom: 'Bfrtipl',
            buttons: [
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'Excel'
                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="fa fa-file-text-o"></i>',
                    titleAttr: 'CSV'
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fa fa-file-pdf-o"></i>',
                    titleAttr: 'PDF'
                }

            ]
        });
    });
    $('.dt-buttons').prepend('<a  onclick="CreateRAPS()" class="dt-button buttons-create buttons-html5" tabindex="0" aria-controls="productTable" href="#" title="Create"><i class="fa fa-plus"></i></a>')
    $('.dt-button').addClass('btn btn-primary').removeClass('dt-button')
</script>