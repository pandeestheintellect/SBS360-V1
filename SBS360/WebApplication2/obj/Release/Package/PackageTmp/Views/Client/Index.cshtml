@model IEnumerable<Eng360Web.Models.ViewModel.ClientViewModel>

<link href="~/Scripts/lobipanel-master/dist/css/lobipanel.min.css" rel="stylesheet" />

@{
    Layout = null;
}



<div class="row inner-page--container">
    <div class="col-lg-12">
        <div class="panel panel-default" id="testpanel">
            <div class="panel-heading">
                <b> Client Details </b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered" id="clientTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ClientDisplayID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Company_Name)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Reference)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.eng_address_master.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.eng_address_master.Mobile)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.eng_address_master.City)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClientDisplayID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company_Name)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Reference)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.eng_address_master.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.eng_address_master.Mobile)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.eng_address_master.City)
                                </td>
                                <td>
                                    <a class="btn" title="Edit Client" onclick="EditClient(@item.ClientID)"> <i class="fa fa-pencil action-pencil"></i>   </a>
                                    <a class="btn" title="View Client Details" onclick="ViewClient(@item.ClientID)"> <i class="fa fa-search action-search" aria-hidden="true"></i> </a>
                                    <a class="btn" title="Delete Client" onclick="DeleteClient(@item.ClientID)"> <i class="fa fa-trash action-trash" aria-hidden="true"></i> </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/lobipanel-master/dist/js/lobipanel.min.js"></script>

<script>
    $(document).ready(function () {
        debugger;
        $('#clientTable').DataTable({
            "autoWidth": true,
            //"scrollX": true,
            dom: 'Bfrtipl',
            buttons: [
                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o"></i>',
                    titleAttr: 'Copy'
                },
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'Excel'
                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="fa fa-file-text-o"></i>',
                    titleAttr: 'CSV'
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fa fa-file-pdf-o"></i>',
                    titleAttr: 'PDF'
                }
            ]
        });
    });
    $('.dt-buttons').prepend('<a  onclick="CreateClient()" class="dt-button buttons-create buttons-html5" tabindex="0" aria-controls="emplyeeTable" href="#" title="Create"><i class="fa fa-plus"></i></a>')
    $('.dt-button').addClass('btn btn-primary').removeClass('dt-button')

    $(function () {
        $('#testpanel, #testpanel1').lobiPanel({
            //Options go here             
            reload: false,
            close: false,
            editTitle: false

        });
    });

    $('.panel-expanded .buttons-create, .panel-unpin .buttons-create').click(function(){
	$('.lobipanel').hide();
    });

</script>
