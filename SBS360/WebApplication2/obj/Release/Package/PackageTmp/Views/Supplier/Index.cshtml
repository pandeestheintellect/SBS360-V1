@model IEnumerable<Eng360Web.Models.ViewModel.SupplierViewModel>

<link href="~/Scripts/lobipanel-master/dist/css/lobipanel.min.css" rel="stylesheet" />

@{
    Layout = null;
}



<div class="row inner-page--container">
    <div class="col-lg-12">
        <div class="panel panel-default" id="testpanel">
            <div class="panel-heading">
                <b>  Supplier Details</b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered" id="supplierTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SupplierDisplayID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Company_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.eng_address_master.Mobile)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Spoc_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Supplier_Description)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.AddressID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedBy)
                                </th>*@
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplierDisplayID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.eng_address_master.Mobile)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Spoc_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Supplier_Description)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.AddressID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                                    </td>*@
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.SupplierID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.SupplierID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.SupplierID })*@

                                    <a class="btn" title="Edit Supplier" onclick="EditSupplier(@item.SupplierID)"> <i class="fa fa-pencil action-pencil" aria-hidden="true"></i>   </a>
                                    <a class="btn" title="View Supplier Details" onclick="ViewSupplier(@item.SupplierID)"> <i class="fa fa-search action-search" aria-hidden="true"></i> </a>
                                    <a class="btn" title="Delete Supplier" onclick="DeleteSupplier(@item.SupplierID)"> <i class="fa fa-trash action-trash" aria-hidden="true"></i> </a>


                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/lobipanel-master/dist/js/lobipanel.min.js"></script>
<script>
    $(document).ready(function () {

        $('#supplierTable').DataTable({
            "autoWidth": true,
            //"scrollX": true,
            dom: 'Bfrtipl',
            buttons: [

                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'Excel'
                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="fa fa-file-text-o"></i>',
                    titleAttr: 'CSV'
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fa fa-file-pdf-o"></i>',
                    titleAttr: 'PDF'
                }

            ]
        });
    });
    $('.dt-buttons').prepend('<a  onclick="CreateSupplier()" class="dt-button buttons-create buttons-html5" tabindex="0" aria-controls="supplierTable" href="#" title="Create"><i class="fa fa-plus"></i></a>')
    $('.dt-button').addClass('btn btn-primary').removeClass('dt-button')

    $(function () {
        $('#testpanel, #testpanel1').lobiPanel({
            //Options go here
            reload: false,
            close: false,
            editTitle: false

        });
    });
</script>