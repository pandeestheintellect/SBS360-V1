@model Eng360Web.Models.ViewModel.QuoteViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.InvoiceNo</title>

    <style type="text/css">
        body, td, th {
            font-family: Arial;
