        }

        .tb {
            border-style: solid;
            /*border-width:1px;*/
            border-bottom-width: 1px;
            border-top-width: 1px;
            border-left-width: 1px;
            border-right-width: 1px;
            margin-top: 5px;
            margin-bottom: 5px;
        }

   @@page
   {    
    margin-top: 3.5cm;
    margin-bottom: 2cm;  
   } 
