@model IEnumerable<Eng360Web.Models.ViewModel.MMStockViewModel>

@{
    Layout = null;
}



<div class="row inner-page--container">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>   Store Details </b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered" id="stockTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Product_Code)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Product_Name)
                                </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Store_Code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product_Company_Name)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Dimension)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Measuring_Unit)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Measuring_Unit)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product_Code)
                                </td>
                                <td>
                                        @Html.DisplayFor(modelItem => item.Product_Name)
                                    </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Store_Code)
                                </td>
                                <td>
                                   
                                    @Html.DisplayFor(modelItem => item.Product_Company_Name)
                                    
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Dimension)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Measuring_Unit)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Measuring_Unit)
                                </td>
                                <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })*@

                                    <a class="btn" title="Stock Detail"  onclick="ViewStock(@item.ProductID)"> <i class="fa fa-pencil action-pencil" aria-hidden="true" ></i>   </a>
                                   
                                    

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $('#stockTable').DataTable({
            "autoWidth": true,
            //"scrollX": true,
            dom: 'Bfrtipl',
            buttons: [
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'Excel'
                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="fa fa-file-text-o"></i>',
                    titleAttr: 'CSV'
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fa fa-file-pdf-o"></i>',
                    titleAttr: 'PDF'
                }

            ]
        });
    });
    
    $('.dt-button').addClass('btn btn-primary').removeClass('dt-button')
</script>